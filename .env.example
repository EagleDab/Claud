# Database
POSTGRES_DB=price_monitor
POSTGRES_USER=price_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_URL=postgresql://price_user:CHANGE_ME_STRONG_PASSWORD@db:5432/price_monitor

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Telegram Bot (ОБЯЗАТЕЛЬНО)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_chat_id_here
TELEGRAM_ERROR_CHANNEL_ID=

# МойСклад API (ОБЯЗАТЕЛЬНО)
MOYSKLAD_TOKEN=your_moysklad_token
MOYSKLAD_API_URL=https://api.moysklad.ru/api/remap/1.2
MOYSKLAD_ACCOUNT_ID=your_account_id

# Scraper settings
DEFAULT_CHECK_INTERVAL=3600
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Playwright settings
HEADLESS_MODE=true
BROWSER_TIMEOUT=60000

# Anti-bot bypass
USE_CLOUDSCRAPER=true
USE_STEALTH_MODE=true
RANDOM_USER_AGENT=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
